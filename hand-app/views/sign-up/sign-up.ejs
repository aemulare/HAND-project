<!-- USER REGISTARTION (SIGN UP) PAGE -->
<!DOCTYPE html>

<head>
  <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet">

  <link href="bundle.css" rel="stylesheet" type="text/css">
  <script src="bundle.js"></script>
  <title>User Registration</title>
</head>

<body>
  <div class="container-fluid">
    <div class="row">
      <div class="center-block col-xs-12" id="hand-brand">
        <img src="img/hand-logo.png" alt="hand-logo" id="hand-logo" class="img-responsive center-block">
        <h1>Register to HAND Project
          <br> Help After Natural Disasters</h1>
      </div>
      <div class="col-xs-12">
        <!-- USER REGISTRATION FORM -->
        <form id="sign-up" name="sign-up" action="/sign-up" method="post" autocomplete="off">

          <!-- User email -->
          <div class="input-group col-xs-12 col-sm-4 col-sm-offset-4">
            <span class="input-group-addon">
              <i class="fa fa-user"></i>
            </span>
            <input type="text" class="form-control" name="email" maxlength="9" id="email" placeholder="email">
          </div>
          <span class="help-block"></span>

          <!-- User password -->
          <div class="input-group col-xs-12 col-sm-4 col-sm-offset-4">
            <span class="input-group-addon">
              <i class="fa fa-lock"></i>
            </span>
            <input type="text" class="form-control" name="password" maxlength="9" id="password" placeholder="password">
          </div>
          <span class="help-block"></span>

          <!-- User password confirmation -->
          <div class="input-group col-xs-12 col-sm-4 col-sm-offset-4">
            <span class="input-group-addon">
              <i class="fa fa-lock"></i>
            </span>
            <input type="text" class="form-control" name="password-confirm" maxlength="9" id="password-confirm" placeholder="confirm password">
          </div>
          <span class="help-block"></span>

          <!-- Register button -->
          <button class="btn btn-lg btn-primary center-block" type="submit" id="register">Register</button>
          <a href="#">Already have an account?</a>

        </form>
      </div>
    </div>
  </div>
</body>